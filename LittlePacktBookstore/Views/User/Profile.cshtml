@model LittlePacktBookstore.ViewModels.UserViewModel
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@section AdminCss
	{
	<link href="~/css/admin/sb-admin.css" rel="stylesheet">
}
<body class="bg-dark">
	<div class="container">
		<div class="card card-register mx-auto mt-5">
			<div class="card-header">Update Profile</div>
			<div class="card-body">

				<form asp-action="profile" method="post">
					<div class="form-group">
						<div class="form-row">
							<div asp-validation-summary="ModelOnly" class="text-danger"></div>
							<div class="col-md-6">
								<div class="form-label-group">
									<input asp-for="FirstName" class="form-control" placeholder="First name" />
									<label asp-for="FirstName"></label>
									<span asp-validation-for="FirstName" class="text-danger"></span>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-label-group">
									<input asp-for="LastName" class="form-control" placeholder="Last name" required="required" />
									<label asp-for="LastName"></label>
									<span asp-validation-for="LastName" class="text-danger" placeholder="Last name"></span>
								</div>
							</div>
						</div>
					</div>
					<div class="form-group">
						<div class="form-label-group">

							<input asp-for="Email" class="form-control" /> @*type="email" placeholder="Email address" required="required" />*@
							<label asp-for="Email">Email address</label>
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>
					</div>
					<div class="form-group">
						<div class="form-label-group">
							<input asp-for="Phone" class="form-control" placeholder="Password" required="required" />
							<label asp-for="Phone"></label>
							<span asp-validation-for="Phone" class="text-danger"></span>
						</div>
					</div>
					<input type="submit" value="Update" class="btn btn-primary btn-sm col-md-2 offset-md-5" />
				</form>
				<div class="form-group">
					<div class="form-label-group">
						<span class="text-success">@ViewData["message"]</span>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
