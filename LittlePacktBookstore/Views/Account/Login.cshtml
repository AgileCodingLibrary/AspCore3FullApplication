@model LoginViewModel
@{
	ViewData["Title"] = "Login";
}
<!-- Custom styles for this template-->
@section AdminCss
	{
	<link href="~/css/admin/sb-admin.css" rel="stylesheet">
}

<body class="bg-dark">
	<div class="container">
		<div class="card card-login mx-auto mt-5">
			<div class="card-header">Login</div>
			<div class="card-body">
				<form action="login" method="post">
					<div class="form-group">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="form-label-group">
							<input asp-for="UserName" class="form-control" placeholder="Email address" required="required" autofocus="autofocus">
							<label asp-for="UserName">Email address</label>
							<span asp-validation-for="UserName" class="text-danger"></span>
						</div>
					</div>
					<div class="form-group">
						<div class="form-label-group">
							<input asp-for="Password" class="form-control" placeholder="Password" required="required">
							<label asp-for="Password">Password</label>
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>
					</div>
					<div class="form-group">
						<div class="checkbox">
							<label>
								<input asp-for="RememberMe" type="checkbox" value="remember-me">
								Remember me
							</label>
						</div>
					</div>
					<input type="submit" value="Login" class="btn btn-primary btn-block" />
				</form>
				<div class="text-center">
					<a asp-action="register" class="d-block small mt-3">Register an Account</a>
				</div>
			</div>
		</div>
	</div>
</body>